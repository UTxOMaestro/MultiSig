# Network & Blockfrost
NETWORK=mainnet                      # or preprod
BLOCKFROST_PROJECT_ID=YOUR_MAINNET_BLOCKFROST_KEY

# Multisig config (defaults; can also be supplied per /api/create call)
MULTISIG_ADDRESS=addr1xx...          # the multisig payment address
PAYMENT_SCRIPT_CBOR=82018183030385...# CBOR hex of the *payment* native script
M_REQUIRED=3                         # e.g., 3-of-5
REQUIRED_KEY_HASHES=f95c...,ce47...,22c6...,3559...,20ce...   # comma-separated hex list

# Destination for *sendAll* mode (sweep)
DEST_ADDRESS=addr1q...               # ***ALL ADA + ALL TOKENS go here***

# CORS / Server
ALLOWED_ORIGIN=*
PORT=3000
